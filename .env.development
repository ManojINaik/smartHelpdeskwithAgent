# Development Environment Configuration
# This file contains settings optimized for local development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
REDIS_PASSWORD=password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=dev-jwt-secret-key-for-development-only-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
LLM_PROVIDER=stub
STUB_MODE=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_SERVICE_URL=http://localhost:8080
EMAIL_FROM=noreply@localhost

# =============================================================================
# CORS AND SECURITY
# =============================================================================
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.md,.pdf,.doc,.docx,.png,.jpg,.jpeg

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
AUTO_CLOSE_ENABLED=true
CONFIDENCE_THRESHOLD=0.8
SLA_HOURS=24

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=simple

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
NODE_ENV=development
PORT=3000

