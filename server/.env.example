# Example Environment Configuration for Atlas Vector Search Integration

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smart_helpdesk_dev
# For Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# AI/LLM Configuration  
GEMINI_API_KEY=your-gemini-api-key-here
LLM_PROVIDER=stub
STUB_MODE=true

# Atlas Vector Search Configuration
ATLAS_VECTOR_SEARCH_ENABLED=false
ATLAS_SEARCH_INDEX_NAME=vector_index
ATLAS_VECTOR_DIMENSION=384
ATLAS_VECTOR_SIMILARITY=cosine
ATLAS_VECTOR_CANDIDATES=100
ATLAS_SEARCH_SCORE_THRESHOLD=0.3

# To enable Atlas Vector Search:
# 1. Set ATLAS_VECTOR_SEARCH_ENABLED=true
# 2. Ensure you're using MongoDB Atlas (not local MongoDB)
# 3. Create a vector search index in your Atlas cluster:
#    - Index name: vector_index (or update ATLAS_SEARCH_INDEX_NAME)
#    - Field path: embedding
#    - Dimensions: 384
#    - Similarity: cosine

# Other Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info
LOG_FORMAT=json

# System Settings
AUTO_CLOSE_ENABLED=true
CONFIDENCE_THRESHOLD=0.8
LOW_CONFIDENCE_THRESHOLD=0.5
ESCALATION_ENABLED=true
HIGH_PRIORITY_THRESHOLD=0.3
SLA_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.txt,.md,.pdf,.doc,.docx